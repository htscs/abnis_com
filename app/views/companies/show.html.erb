<div id='mainform' class="front_mode"> <!-- FRONT_MODE start -->
  <div class="main">

    <div class="header">
      <ul class="nav">
        <li>
      <%= link_to "home", user_path(@current_user_id, :selected_related => 'companies'), :class => "ico_home" %> 
        </li>
        <li>
      <%= link_to "Aziende", users_select_home_path, :class => "ico_company" %>
        </li>
      </ul>
    </div>
    <div class="section">
      <%= image_tag @company.image_url.to_s, :alt => "" %>      
      <%= link_to "#{@company.name} #{@company.sector} #{@company.status} - #{@company.memo}", edit_company_path(@company.id), :class => "" %>
    </div>

  </div>

  <div class="related">    
    <% if @selected_related == 'favorites' %>
      <%= render "show_related_favorites" %>
    <% elsif @selected_related == 'people' %>
      <%= render "show_related_people" %>    
    <% end %>
  </div>

</div> <!-- FRONT_MODE end -->