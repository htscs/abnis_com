    <%#= link_to "", companies_connect_person_path(:current_company_id => @company.id, :current_selected_related => 'people'), :class => "ico_new" %> 

    <%= link_to "", '#', :class => "ico_new" %> 

  <% end %> 

</div>
<div class="section">
  <nav>
    <ul class="view_list">          
      <% @people.each do |person| %>
        <li> <%# mettere alternato un  <li class="alternate"> %>
                              
          <%= link_to "#{person.first_name}", companies_connect_person_update_path(:company_id => @company_id, :person_id => person.id, :selected_related => 'people', :page => @page_id), :class => 'sx' %>
                    
        </li>
      <% end %>
    </ul>
  </nav>
</div>
<div class="footer">
  <%#= will_paginate @people, :prev_label => '<<', :next_label => '>>', :inner_window => 0, :outer_window => 0 %>
